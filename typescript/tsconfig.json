{
  "compilerOptions": {
    "module": "commonjs",
    "noImplicitReturns": true,
    "noUnusedLocals": false,
    "outDir": "lib",
    "sourceMap": true,
    "strict": true,
    "target": "es5", //"target": "es2017",
    "downlevelIteration": true,
    "baseUrl": "./src",
    "paths": {
      "*": ["*"]
    }
  },
  "declaration": true,
  "allowSyntheticDefaultImports": true,
  "allowJs": true,
  "compileOnSave": true,
  "include": [
    "src"
  ],
  "exclude": [
    "node_modules"
  ]
}
